{% extends "base.html.twig" %}

{% block content %}
    <twig:Section>
        <twig:Container>
            {% if item_list is iterable and item_list is not empty %}
                {% if category is defined %}
{#                    {{ component('FilterComponent', item_list) }}#}
                {% else %}
                    {% set category = '' %}
                {% endif %}
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 md:gap-x-10 md:gap-y-16 lg:gap-y-24" role="list">
                    {% for item in item_list %}
                        <div class="flex sm:block justify-center content" role="listitem">
                            <twig:Card :item="item" />
                        </div>
                    {% endfor %}
                </div>

            {% else %}
                <p class="text-large">{{ 'app.item_list.list.empty'|trans }}</p>
            {% endif %}

{#            {{ knp_pagination_render(item_list, 'snippets/custom_pagination.html.twig', { 'category': category }) }}#}
        </twig:Container>
    </twig:Section>
{% endblock %}

